{
  "manifest_version": 3,
  "name": "Patreon Color Themes",
  "description": "Extension for applying custom color themes to Patreon",
  "version": "1.1.0",
  "author": "Neulen",
  "homepage_url": "https://patreon.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Patreon Color Themes",
    "default_popup": "index.html"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://patreon.com/*",
    "https://www.patreon.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://patreon.com/*",
        "https://www.patreon.com/*"
      ],
      "js": [
        "src/background.ts"
      ]
    }
  ]
}